<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Initiation.Layouts.DemoFlexLayout"
             Title="DemoFlexLayout">
    <FlexLayout Direction="Row" Wrap="Wrap" AlignItems="Center">
<!-- JustifyContent="SpaceEvenly" -->
                
        <Label Text="Label A" BackgroundColor="Red" FlexLayout.Grow="1"/>
        <Label Text="Label B" BackgroundColor="Blue" FlexLayout.Grow="3"/>
        <Label Text="Label C" BackgroundColor="Green" FlexLayout.Grow="2"/>
        <Label Text="Label D" BackgroundColor="Black" FlexLayout.Grow="5"/>
        <Label Text="Label E" BackgroundColor="Cyan" FlexLayout.Grow="4"/>
    </FlexLayout>
</ContentPage>